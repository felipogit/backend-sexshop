generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Categoria {
  id        String    @id @default(uuid())
  nome      String
  produtos  Produto[]
  criadaEm  DateTime  @default(now())
}

model Produto {
  id          String    @id @default(uuid())
  nome        String
  descricao   String
  preco       Float
  imagemUrl   String
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId String
  criadoEm    DateTime  @default(now())
}

model Admin {
  id       String   @id @default(uuid())
  email    String   @unique
  senha    String
  role     String   @default("ADMIN")
  criadoEm DateTime @default(now())
}



